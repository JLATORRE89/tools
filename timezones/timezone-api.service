[Unit]
Description=Timezone API Service
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/timezone-api
Environment="PATH=/opt/timezone-api/venv/bin"
ExecStart=/opt/timezone-api/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/timezone-api/logs

[Install]
WantedBy=multi-user.target
